<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Võ Văn Huấn"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#666BF7"
            android:textSize="12dp"
            android:padding="5dp"
             />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Xóa địa chỉ"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#FF0000"
            android:textSize="12dp"
            android:padding="5dp"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="0963012812 "
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99 An Dương Vương, Phường 16, Quận 8, TP.Hồ Chí Minh "
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/layout_type_address"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_type_address">
            <TextView
                android:id="@+id/tv_type_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF7A00"
                android:layout_margin="5dp"
                android:text="Nhà riêng"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_is_default_address"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_is_default_address">
            <TextView
                android:id="@+id/tv_is_default_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1E878E"
                android:layout_margin="5dp"
                android:text="Mặc định"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>