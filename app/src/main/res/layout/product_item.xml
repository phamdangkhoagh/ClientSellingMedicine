<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/layoutProductItem"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:background="@drawable/product_background"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivProductItem"
            android:layout_width="match_parent"
            android:layout_height="160dp"

            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:src="@drawable/medimate_product" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/tvNameProductItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/txtHHNN"
                android:textAlignment="center"
                android:maxLines="3"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"

                android:gravity="center"
                android:text="@string/priceHHNN"
                android:textAlignment="center"
                android:textColor="@color/header_color"
                android:textSize="14sp" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddtoCartProduct"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_add_home"
            android:text="Chọn mua"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Discount"
        android:orientation="vertical"
        android:background="@drawable/dicount_background"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_width="46dp"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/tv_Discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            android:text="-20%"/>
    </LinearLayout>
</RelativeLayout>