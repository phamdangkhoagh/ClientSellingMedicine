<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutFeedItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFeed"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:background="@drawable/item_product"
            app:shapeAppearanceOverlay="@style/img_healthy_news" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Có nên uống nước dừa thay nước lọc?" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trẻ béo phì hoặc hít phải khói thuốc thụ động, người mẹ hút thuốc lúc mang thai sẽ làm tăng nguy cơ dậy thì sớm ở trẻ."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="Fri, 12 Apr 2024">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>